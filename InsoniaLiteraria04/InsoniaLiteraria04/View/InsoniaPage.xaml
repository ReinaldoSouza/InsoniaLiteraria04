<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsoniaLiteraria04.View.InsoniaPage"
             xmlns:controls="clr-namespace:InsoniaLiteraria04.CardView"
             BackgroundImage="backInsonia">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout>

                    <Frame Margin="7" BackgroundColor="Transparent" Padding="3">
                        <StackLayout Padding="0">
                            <controls:EsseMundoCardView/>
                            <controls:SuaMusicaCardView/>
                        </StackLayout>
                    </Frame>

                    <Frame Margin="7" BackgroundColor="Transparent" Padding="3">
                        <StackLayout Padding="0">
                            <controls:NoEscuroCardView/>
                        </StackLayout>
                    </Frame>
                    
                </StackLayout>
            </ScrollView>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>